{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules", ".turbo", ".next", "dist"]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "include": ["./examples/**", "./packages/**"],
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "include": ["./packages/**"],
    "ignore": ["./packages/omniston-sdk/src/api/messages/**"]
  }
}
